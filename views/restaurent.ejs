  <%- include("partials/header") %>

<div class="jumbotron">
  <div class="container">
    <h1 class="display-4">Welcome to <%= restaurent.name %></h1>
    <p><%= restaurent.description %></p>
  </div>
</div>

<form action="/orders" method="post">
  <div class="box">
    <div class="head">
      <h2>Select your Items</h2>
    </div>
    <% cats.forEach(function(cat){ %>
      <div class="catBtn">
        <button type="button" class="btn btn-info btn-lg"><%= cat %></button>
      </div>
      <% restaurent.menu.forEach(function(item){  if(item.category == cat){%>
      <div class="item">
        <div class="" style="width: 60%">
          <p><b>&nbsp<%= item.name + " - Rs." + item.price %></b></p>
        </div>
        <input type="number" name="quantity" placeholder="quantity"  min=0 onchange="updateOrder(this.value, '<%= item.name %>', <%=item.price %>); displayOrder()" >
      </div>
      <% }}) %>
    <% }) %>
  </div>

  <div class="box">
    <div class="head">
      <h3>Complete your Order</h3>
    </div>
      <div class="form-group">
        <label for="selected">Your selections</label>
        <textarea id="selected" name="selected" rows="5" cols="78SS" readonly="true"></textarea>
      </div>
      <div class="form-group">
        <label for="name">Name</label>
        <input type="text" required="true" class="form-control" name="name" placeholder="Enter Name">
      </div>
      <div class="form-group">
        <label for="mobile">Mobile Whatapp</label>
        <input type="text" required="true" class="form-control" name="mobile" placeholder="Enter mobile number">
      </div>
      <div class="form-group">
        <label for="address">Address</label>
        <input type="text" required="true" class="form-control" name="address" placeholder="Enter your Adress">
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-majanda">Submit Order</button>
      </div>
      <br />
      <input hidden=true name=restName value ="<%=restaurent.name %>"></input>
  </div>
</form>

<%- include("partials/footer") %>
