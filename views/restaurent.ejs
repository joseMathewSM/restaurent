<%- include("partials/header") %>

<div class="jumbotron">
  <div class="container">
    <h1 class="display-4">Welcome to <%= restaurent.name %></h1>
    <p><%= restaurent.description %></p>
  </div>
</div>

<form action="/orders" method="post">
  <div class="box">
    <div class="head">
      <h3>Select your Items</h3>
    </div>
    <% restaurent.menu.forEach(function(item){ %>
    <div class="item">
        <p><%= item.name + " - Rs." + item.price %></p>
        <input type="number" name="quantity" placeholder="quantity" min=0 onchange="updateOrder(this.value, '<%= item.name %>', <%=item.price %>); displayOrder()" >
    </div>
    <% }) %>
  </div>

  <div class="box">
    <div class="head">
      <h3>Complete your Order</h3>
    </div>
      <div class="form-group">
        <label for="selected">Your selections</label>
        <textarea id="selected" name="selected" rows="5" cols="80" readonly="true"></textarea>
      </div>
      <div class="form-group">
        <label for="name">Name</label>
        <input type="text" required="true" class="form-control" name="name" placeholder="Enter Name">
      </div>
      <div class="form-group">
        <label for="mobile">Mobile Whatapp</label>
        <input type="text" required="true" class="form-control" name="mobile" placeholder="Enter mobile number">
      </div>
      <div class="form-group">
        <label for="address">Address</label>
        <input type="text" required="true" class="form-control" name="address" placeholder="Enter your Adress">
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary">Submit Order</button>
      </div>
      <input hidden=true name=restName value ="<%=restaurent.name %>"></input>
  </div>
</form>

<%- include("partials/footer") %>
