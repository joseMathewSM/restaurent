<%- include("partials/header") %>
<form action="/c-restaurent" method="post">
  <div class="box">
    <div class="head">
      <h3>Create a new Restaurent</h3>
    </div>
      <div class="form-group">
        <label for="name">Name</label>
        <input type="text" required="true" class="form-control" name="name" placeholder="Enter Name">
      </div>
      <div class="form-group">
        <label for="mobile">Phone</label>
        <input type="text" required="true" class="form-control" name="mobile" placeholder="Enter mobile number">
      </div>
      <div class="form-group">
        <label for="address">Address</label>
        <input type="text" required="true" class="form-control" name="address" placeholder="Enter Adress">
      </div>
      <div class="form-group">
        <label for="address">Description</label>
        <input type="text" required="true" class="form-control" name="description" placeholder="Enter Description.">
      </div>
      <div class="form-group" id="itemGroup">
        <label for="menu">Menu Items</label>
        <div class="row">
          <div class="col">
            <input type="text" required="true" name="itemname" class="form-control" placeholder="Item Name">
          </div>
          <div class="col">
            <input type="number" required="true" name= "itemprice" class="form-control" placeholder="Price">
          </div>
          <div class="col">
            <input type="text" required="true" name="itemcategory" class="form-control" placeholder="category">
          </div>
        </div>
      </div>
      <div class="form-group">
        <div class="col" style="margin:2%">
          <button type="button" class="btn btn-success" onclick="addItem()">Add Item</button>
        </div>
        <button type="submit" class="btn btn-primary">Create</button>
      </div>
  </div>
</form>

<%- include("partials/footer") %>
